<div class="container">
	<div class="row col-xs-12 margin-top-25">
		<span class="col-xs-9"><h1>Listing Roles</h1></span>
 		<span class="col-xs-1"><%= link_to '  New', new_role_path, :class =>'glyphicon glyphicon-plus align: left', :title=>'New Role' %></span>
 		<input type="text" id="search" placeholder="Type to search..." />
 	</div>
  <div class="row">
	<div class="col-xs-12">
	<table id="table" class="table-striped table-bordered table-hover table-condensed col-xs-12 margin-top-05"> 
	  <thead>
		<tr >
          <th>Name</th>
          <th>Description</th>
		  <th colspan="3">Actions</th>
		</tr>
	  </thead>
	  <tbody>

		<% @roles.each do |role| %>
          <tr>
			<td><%= role.name %></td>
			<td><%= role.description %></td>
            <td><%= link_to '', role_path(role), :class => 'glyphicon glyphicon-eye-open', :title => 'Show' %></td>
            <td><%= link_to '', edit_role_path(role), :class => 'glyphicon glyphicon-pencil', :title => 'Edit' %></td>
			<td>
			  <%= link_to '', role_path(role),				
			    method: :delete,
				data: {confirm: 'Are you sure?'},
				:class => 'glyphicon glyphicon-trash',
				:title => 'Delete'
				%>
			</td>
          </tr>
		<% end %>
	  </tbody>
	</table>
     
	</div>
  </div>
</div>