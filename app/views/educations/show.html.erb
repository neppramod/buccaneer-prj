<div class="row margin-top-10">
  <div class="col-xs-1"><strong>Education Level:</strong></div>
  <div class="col-xs-1"><%= @education.educationlevel %></div>
</div>
<hr>

<h4 class="text-info">Persons</h4>
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <table class="table-striped table-bordered table-hover table-condensed">
        <thead>
        <tr>
          <th>Name</th>
          
        </tr>
        </thead>
        <tbody>
        <% @pp.each do |p| %>
            <tr>
              <td><%= p.first_name   %> <%=  p.last_name %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="row margin-top-10">
  <div class="col-xs-1"><strong>Total:</strong></div>
  <div class="col-xs-1"><%=@pp.size %></div>
</div>
<hr>

<div class="container margin-top-25">
  <%= link_to 'Edit', edit_education_path(@education), class: "btn btn-primary" %>
  <%= link_to 'Ok', educations_path , class: "btn btn-primary" %>
</div>

