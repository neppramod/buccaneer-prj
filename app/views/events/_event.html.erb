<script>
$(function(){
    $( ".datetimepicker" ).datepicker({
    dateFormat: "yy-mm-dd"
    });
});
</script>
<%= form_for(@event, :html => {class: "form-horizontal", role: "form"} ) do |p| %>

    <div class="row margin-top-15">
      <div class="col-xs-2"><%= p.label :eventName %></div>
      <div class="col-xs-4"><%= p.text_field :eventName, :class => 'form-control'%></div>
    </div>

    <div class="row margin-top-15">
      <div class="col-xs-2"><%= p.label :eventStartDate%></div>
      <div class="col-xs-4"><%= p.text_field :eventStartDate, :class => 'form-control'%></div>
    </div>

    <div class="row margin-top-15">
      <div class="col-xs-2"><%= p.label :eventEndDate%></div>
      <div class="col-xs-4"><%= p.text_field :eventEndDate, :class => 'form-control'%></div>
    </div>

    <div class="row margin-top-15">
      <div class="col-xs-2"><%= p.label :location%></div>
      <div class="col-xs-4"><%= p.collection_select(:location, Address.where(address_type: "Event"), :id, :address_name) %></div>
    </div>

    <div class="row margin-top-15">
      <div class="col-xs-2"><%= p.label :description%></div>
      <div class="col-xs-4"><%= p.text_area :description, :class => 'form-control'%></div>
    </div>

    <div class="row margin-top-15">
      <div class="col-xs-2"><%= p.label :persons, 'Participating People' %></div>
      <div class="col-xs-4">

        <%= select_tag "participating_people",
                       options_from_collection_for_select(Person.all, 'id', 'name', @event.persons.map{ |j| j.id }), :multiple => true, :class => "form-control" %>
      </div>
    </div>
  
    <div class="container margin-top-25">

      <%= button_tag(type: "submit", class: "btn btn-primary") do %>
          Save <i class="icon-repeat"></i>
      <% end %>
      <%= link_to "Cancel", :back, {:class=>"btn btn-danger"} %>
    </div>

<% end %>
