<div class="container">
<div class="row">
<div class="col-sm-8">
<%= link_to 'Add New Event', new_event_path, :class =>'btn btn-primary', :title=>'New Event' %>
<table class="table-striped table-bordered table-hover table-condensed"> 
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th> Location </th>
      <th> Description </th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
   <tbody>
        <% @events.each do |event| %>
        <tr>
            <td><%= event.eventName %></td>
            <td><%= event.eventStartDate%></td>
            <td><%= event.eventEndDate%></td>
            <% @event_location = Address.find( event.location) %>
            <td><%= @event_location.address_name %> </td>
            <td><%= event.description%></td>
            <td><%= link_to '', event_path(event), :class => 'glyphicon glyphicon-eye-open', :title => 'Show' %></td>
            <td><%= link_to '', edit_event_path(event), :class => 'glyphicon glyphicon-pencil', :title => 'Edit' %></td>
            <td>
              <%= link_to '', event_path(event),              
                method: :delete,
                data: {confirm: 'Are you sure?'},
                :class => 'glyphicon glyphicon-trash',
                :title => 'Delete'
                %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>