<div class="container">

<div class="row col-xs-12 margin-top-25">
    <span class="col-xs-9"></span>
    <span class="col-xs-1"><%= link_to '  New', new_event_path, :class =>'glyphicon glyphicon-plus align: left', :title=>'New Event' %></span>
    <input type="text" id="search" placeholder="Type to search..." />
  </div>

<div class="row">
<div class="col-xs-12">
<table id="table" class="table-striped table-bordered table-hover table-condensed col-xs-12 margin-top-05"> 
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th> Location </th>
      <th> Description </th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
   <tbody>
        <% @events.each do |event| %>
        <tr>
            <td><%= event.eventName %></td>
            <td><%= event.eventStartDate%></td>
            <td><%= event.eventEndDate%></td>
            <% @event_location = Address.find( event.location) %>
            <td><%= @event_location.address_name %> </td>
            <td><%= event.description%></td>
            <td><%= link_to '', event_path(event), :class => 'glyphicon glyphicon-eye-open', :title => 'Show' %></td>
            <td><%= link_to '', edit_event_path(event), :class => 'glyphicon glyphicon-pencil', :title => 'Edit' %></td>
            <td>
              <%= link_to '', event_path(event),              
                method: :delete,
                data: {confirm: 'Are you sure?'},
                :class => 'glyphicon glyphicon-trash',
                :title => 'Delete'
                %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>