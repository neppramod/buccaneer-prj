<h1>Event Details</h1>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>Event Name:</strong></div>
  <div class="col-xs-10"><%= @event.eventName %></div>
</div>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>Start Date:</strong></div>
  <div class="col-xs-10"><%= @event.eventStartDate %></div>
</div>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>End Date:</strong></div>
  <div class="col-xs-10"><%= @event.eventEndDate %></div>
</div>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>Location:</strong></div>
  <div class="col-xs-10"><%= @event_location.address_name %></div>
</div>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>Description:</strong></div>
  <div class="col-xs-10"><%= @event.description %></div>
</div>

<h4 class="text-info">Persons</h4>
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <table class="table-striped table-bordered table-hover table-condensed">
        <thead>
        <tr>
          <th>Name</th>
          <th>Hobby</th>
        </tr>
        </thead>
        <tbody>
        <% @event.persons.each do |p| %>
            <tr>
              <td><%= p.name %></td>
              <td><%= p.hobby %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container margin-top-25">
  <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-primary" %>
  <%= link_to 'Ok', events_path , class: "btn btn-primary" %>
</div>
