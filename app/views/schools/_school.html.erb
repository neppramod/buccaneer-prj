<div class="container">
<div class ="row">
<div class="col-sm-8"> 

<%= form_for(@school, :html => {class: "form-horizontal", role: "form"} ) do |p| %>

    <div class="row margin-top-15">
      <div class="col-xs-2"><%= p.label :SchoolName %></div>
      <div class="col-xs-4"><%= p.text_field :SchoolName, :class => 'form-control'%></div>
    </div>


    <div class="row margin-top-15">
      <div class="col-xs-2"><%= p.label :ContactNumber %></div>
      <div class="col-xs-4"><%= p.text_field :ContactNumber, :class => 'form-control' %></div>
    </div>

   <div class="container margin-top-25">

      <%= button_tag(type: "submit", class: "btn btn-primary") do %>
          Save <i class="icon-repeat"></i>
      <% end %>
      <%= link_to "Cancel", :back, {:class=>"btn btn-danger"} %>
    </div>

<% end %>
</div>
</div>
</div>

