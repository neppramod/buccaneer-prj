
<div class="container">
    <div class="row col-xs-12 margin-top-25">
        <span class="col-xs-9"></span>
        <span class="col-xs-1"><%= link_to '  New', new_school_path, :class =>'glyphicon glyphicon-plus align: left', :title=>'Add School' %></span>
        <input type="text" id="search" placeholder="Type to search..." />
    
    </div> 

<table id="table" class="table-striped table-bordered table-hover table-condensed col-xs-12 margin-top-05">
    <h2>Schools</h2>
    <thead>
    <tr>
      <th>School</th>
      <th >Contact Number</th>
      <th colspan="6">Actions</th>
    </tr>
    </thead>
<tbody>
   <% @schools.each do |school| %>
        <tr>
            <td><%= school.SchoolName %></td>
            <td><%= school.ContactNumber %></td>
            <td><%= link_to '', edit_school_path(school), :class => 'glyphicon glyphicon-pencil', :title => 'Edit' %></td>
            <td><%= link_to '', school_path(school),

        method: :delete,
            data: {confirm: 'Are you sure?'},
        :class => 'glyphicon glyphicon-trash',
            :title => 'Delete'
             %></td>
        </tr>
    <% end %>
 </tbody>
</table>

</div>
</div>
</div>

