<h1>Person Details</h1>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>First Name:</strong></div>
  <div class="col-xs-10"><%= @person.first_name %></div>
</div>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>Middle Name:</strong></div>
  <div class="col-xs-10"><%= @person.middle_name %></div>
</div>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>Last Name:</strong></div>
  <div class="col-xs-10"><%= @person.last_name %></div>
</div>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>Email :</strong></div>
  <div class="col-xs-10"><%= @person.email %></div>
</div>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>Primary Contact :</strong></div>
  <div class="col-xs-10"><%= @person.primary_contact %></div>
</div>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>Secondary Contact :</strong></div>
  <div class="col-xs-10"><%= @person.secondary_contact %></div>
</div>
<div class="row margin-top-10">
  <div class="col-xs-2"><strong>Roles :</strong></div>
  <div class="col-xs-10"><% @person.roles.each do |p| %>
            <%= p.name %><br />
        <% end %>
  </div>
</div>

<h4 class="text-info">Addresses</h4>
<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <table class="table-striped table-bordered table-hover table-condensed">
        <thead>
        <tr>
          <th>Street</th>
          <th>City</th>
        </tr>
        </thead>
        <tbody>
        <% @person.addresses.each do |a| %>
            <tr>
              <td><%= a.street %></td>
              <td><%= a.city %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container margin-top-25">
  <%= link_to 'Edit', edit_person_path(@person), class: "btn btn-primary" %>
  <%= link_to 'Ok', persons_path , class: "btn btn-primary" %>
</div>
