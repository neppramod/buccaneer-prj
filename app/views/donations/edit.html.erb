 
<h1>Donation edit</h1>

<%= form_for(@donation, :url => {:action => 'update'}) do |p| %>
    <p>
      <%= p.label :monetary_value %><br>
      <%= p.text_field :monetary_value %>
    </p>
    <p>
      <%= p.label :date%><br>
      <%= p.text_field :date%>
    </p>
    <p>
      <%= p.label :type%><br>
      <%= p.text_field :type%>
    </p>
    <p>
      <%= p.label :description%><br>
      <%= p.text_area :description%>
    </p>

    <p>
      <%= p.label :persons %>
      <%= select_tag "participating_people",
      options_from_collection_for_select(Person.all, 'id', 'name', @donation.persons.map{ |j| j.id }), :multiple => true %>
    </p>

    
    <p>
      <%= submit_tag("Update Donation") %>
    </p>
    
    
<% end %>
