<h1>Donations</h1>

<%= link_to 'New Donation', new_donation_path, :class =>'btn btn-primary'%>

<div class="container">
  <div class="row">
	<div class="col-sm-6">
	<table class="table-striped table-bordered table-hover table-condensed"> 
	  <thead>
		<tr >
          <th>Monetary Value</th>
          <th>Date</th>
          <th>Type</th>
		  <th colspan="3"></th>
		</tr>
	  </thead>
	  <tbody>

		<% @donations.each do |donation| %>
          <tr>
			<td><%= donation.monetary_value %></td>
			<td><%= donation.date%></td>
			<td><%= donation.type%></td>
			<td><%= donation.description%></td>
            <td><%= link_to 'Show', donation_path(donation) %></td>
            <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
            <td><%= link_to 'Destroy', donation_path(donation),

				method: :delete,
				data: {confirm: 'Are you sure?'}
				%></td>
          </tr>
		<% end %>
	  </tbody>
	</table>
	</div>
  </div>
</div>
