<div class="container">
  <div class="row">
	<div class="col-sm-8">
	<table class="table-striped table-bordered table-hover table-condensed"> 
	  <thead>
		<tr >
          <th>Monetary Value</th>
          <th>Date</th>
          <th>Type</th>
          <th>Description</th>
		  <th colspan="3">Actions</th>
		</tr>
	  </thead>
	  <tbody>

		<% @donations.each do |donation| %>
          <tr>
			<td><%= donation.monetary_value %></td>
			<td><%= donation.date%></td>
			<td><%= donation.type%></td>
			<td><%= donation.description%></td>
            <td><%= link_to '', donation_path(donation), :class => 'glyphicon glyphicon-eye-open', :title => 'Show' %></td>
            <td><%= link_to '', edit_donation_path(donation), :class => 'glyphicon glyphicon-pencil', :title => 'Edit' %></td>
            <td><%= link_to '', donation_path(donation),
				method: :delete,
				data: {confirm: 'Are you sure?'}, :class => 'glyphicon glyphicon-trash', :title => 'Destroy'
				%></td>
          </tr>
		<% end %>
	  </tbody>
	</table>
      <%= link_to '', new_donation_path, :class =>'glyphicon glyphicon-plus', :title=>'New Donation' %>
	</div>
  </div>
</div>
