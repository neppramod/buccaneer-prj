<%= form_tag user_sessions_path, :method => :post, :class => "form-horizontal" do %>

    <div class="row margin-top-15">
      <div class="col-xs-2"><%= label_tag :email %></div>
      <div class="col-xs-4"><%= text_field_tag('email', nil, class: "form-control") %></div>
    </div>

    <div class="row margin-top-15">
      <div class="col-xs-2"><%= label_tag :password %></div>
      <div class="col-xs-4"><%= password_field_tag('password', nil, class: "form-control") %></div>
    </div>

    <div class="container margin-top-25">
        <%= submit_tag "Sign in", class: "btn btn-primary btn-lg" %>
    </div>
<%end %>

