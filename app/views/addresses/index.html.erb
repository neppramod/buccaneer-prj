<div class="container">
	<div class="row col-xs-12 margin-top-25">
		<span class="col-xs-9"></span>
 		<span class="col-xs-1"><%= link_to '  New', new_address_path, :class =>'glyphicon glyphicon-plus align: left', :title=>'New Address' %></span>
 		<input type="text" id="search" placeholder="Type to search..." />
 	</div>



  <div class="row">
	<div class="col-xs-12">
	<table id="table" class="table-striped table-bordered table-hover table-condensed col-xs-12 margin-top-05"> 
	  <thead>
		<tr >
          <th>Street</th>
          <th>City</th>
          <th>State</th>
          <th>County</th>
          <th>Zip</th>
		  <th colspan="3">Actions</th>
		</tr>
	  </thead>
	  <tbody>

		<% @addresses.each do |address| %>
          <tr>
			<td><%= address.street %></td>
			<td><%= address.city%></td>
			<td><%= address.state%></td>
			<td><%= address.county%></td>
			<td><%= address.zip%></td>
            <td><%= link_to '', address_path(address), :class => 'glyphicon glyphicon-eye-open', :title => 'Show' %></td>
            <td><%= link_to '', edit_address_path(address), :class => 'glyphicon glyphicon-pencil', :title => 'Edit' %></td>
			<td>
			  <%= link_to '', address_path(address),				
			    method: :delete,
				data: {confirm: 'Are you sure?'},
				:class => 'glyphicon glyphicon-trash',
				:title => 'Delete'
				%>
			</td>
          </tr>
		<% end %>
	  </tbody>
	</table>
      
	</div>
  </div>
</div>
